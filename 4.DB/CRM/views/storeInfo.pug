doctype html 
html(lang="ko")
    head 
        meta(charset="utf-8")
        title Store information
        link(rel="stylesheet" type="text/css" href="/static/css/style.css")
    body 
        section.nav-section
            include includes/nav.pug
        section.main-section
            p 매장 정보
            table
                thead 
                    tr 
                        th name
                        th type
                        th address
                tbody
                    tr 
                        td #{storeData.Name}
                        td #{storeData.Type}
                        td #{storeData.Address}
            p 월간 매출액
            div.revenue-table-container
                table 
                    thead
                        tr 
                            th month
                            th revenue
                            th count 
                    tbody
                        for row in revenueData 
                            tr 
                                td #{row.Month}
                                td #{row.Revenue}
                                td #{row.Count}
            p 단골 고객
            table 
                thead 
                    tr 
                        th user_id 
                        th name 
                        th frequency 
                tbody 
                    for row in regularData
                        tr 
                            td 
                                a(href=`/users/user-info/${row.UserId}`) #{row.UserId}
                            td #{row.Name}
                            td #{row.Frequency}
